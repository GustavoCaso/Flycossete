.admin_event
  %h1 Eventos Flycossete

  %table.table
    %tr
      %th Nombre
      %th Descripcion
      %th
      %th
      %th

    - @events.each do |event|
      %tr
        %td= event.name
        %td= event.description
        %td= link_to 'Ver', [:admin, event]
        %td= link_to 'Editar', edit_admin_event_path(event)
        %td= link_to 'Destruir', [:admin, event], :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

= link_to 'Nuevo Evento', new_admin_event_path, class: "admin_link"

