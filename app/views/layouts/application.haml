!!!
%html
  %head
    %title Flycosette
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .container
      %header
        .row
          .col-xs-12
            .logo
              = link_to image_tag("flycosette_logo.png") , root_path
          .col-xs-12
            %nav
              %ul.main-nav
                %li.products
                  = link_to "Productos", "#"
                  %ul.products_sub
                    %li Jersey
                    %li Pantalones
                    %li Faldas
                    %li Camisas
                    %li Camisetas
                    %li Complementos
                    %li Botas
                    %li Outlet
                %li= link_to "Coleccion", "#"
                %li= link_to "Nosotros", "#"
                %li= link_to "Contacta", "#"
    = yield
